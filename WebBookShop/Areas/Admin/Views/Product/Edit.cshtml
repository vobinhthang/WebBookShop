
@{
    ViewBag.Title = "Cập nhật thông tin sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@model WebBookShop.Models.ProductModel

<div class="container-fluid">

    <div>
        <p>
            <a href="/admin/product" class="text-info">Quay lại </a>
            <span class="active">/ Cập nhập thông tin sản phẩm</span>
        </p>
    </div>


    @if (TempData["UPDATE"] != null)
    {
        <div class="alert alert-@TempData["ALEART"] alert-dismissible fade show" id="alo123">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <strong>Thông báo!</strong> <br />
            <span>@TempData["UPDATE"]</span>
        </div>
    }


    <div class="card">
        <div class="card-body">
            <div class="card-title mb-4">
                <h4>Cập nhập thông tin sản phẩm</h4>
            </div>
            <div class="basic-form">
                @using (Html.BeginForm("Edit", "Product", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "")
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Tên sản phẩm</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control ", @placeholder = "Nhập tên sản phẩm" })
                            @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Thể loại</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.CategoryId, (SelectList)ViewBag.CateList, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Tác giả</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.AuthorName, new { @class = "form-control ", @placeholder = "Nhập tên tác giả" })
                            @Html.ValidationMessageFor(m => m.AuthorName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Giá sản phẩm</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Price, new { @type = "number", @class = "form-control ", @placeholder = "Nhập giá sản phẩm" })
                            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Số trang</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.NumberPage, new { @type = "number", @class = "form-control ", @placeholder = "Nhập số trang" })
                            @Html.ValidationMessageFor(m => m.NumberPage, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Nhà xuất bản</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.PublishCompany, new {  @class = "form-control ", @placeholder = "Nhập nhà xuát bản" })
                            @Html.ValidationMessageFor(m => m.PublishCompany, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Mô tả</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Description, new { @class = "form-control ", @placeholder = "Nhập mô tả", @style = "height:200px" })
                            @*@Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })*@
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" id="btnsave" class="btn btn-dark mt-3 mr-5">Cập nhật</button>
                        
                        </div>
                    </div>
                }
                
            </div>
        </div>
    </div>
</div>

