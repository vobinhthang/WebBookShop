
@{
    ViewBag.Title = "Cập nhật đơn hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model WebBookShop.Models.OrderModel

<div class="container-fluid">
    <div>
        <p>
            <a href="/admin/order/" class="text-info">Quay lại </a>
            <span class="active">/ Cập nhập đơn hàng</span>
        </p>
    </div>

    @if (TempData["CREATE"] != null)
    {
        <div class="alert alert-@TempData["ALEART"] alert-dismissible fade show " id="alo123">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <strong>Thông báo!</strong> <br />
            <span>@TempData["CREATE"].</span>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="card-title mb-4">
                <h4>Cập nhập đơn hàng</h4>
            </div>
            <div class="basic-form">
                @using (Html.BeginForm("Edit", "Order", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "")
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Tên khách hàng</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control reloadtext", @placeholder = "Nhập tên khách hàng" })
                            @Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">SĐT</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "form-control reloadtext", @placeholder = "Nhập số điện thoại" })
                            @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control reloadtext", @placeholder = "Nhập email" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Địa chỉ khách hàng</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Address, new { @class = "form-control reloadtext", @placeholder = "Nhập địa chỉ" })
                            @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Giảm giá (%) </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Discount, new { @type = "number", @class = "form-control reloadtext", @placeholder = "Nhập %", @style = "width:100px" })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Trạng thái đơn hàng</label>
                        <div class="col-sm-10">
                            <label class="radio-inline mr-3" style="margin-top:10px">
                                @Html.RadioButtonFor(m => m.Status, "True") Đang xử lý
                            </label>
                            <label class="radio-inline mr-3">
                                @Html.RadioButtonFor(m => m.Status, "False") Hủy đơn hàng
                            </label>
                            <br />
                            @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Vận chuyển đơn hàng</label>
                        <div class="col-sm-10">
                            <label class="radio-inline mr-3" style="margin-top:10px">
                                @Html.RadioButtonFor(m => m.Delivered, "True") Đã giao hàng
                            </label>
                            <label class="radio-inline mr-3">
                                @Html.RadioButtonFor(m => m.Delivered, "False") Chờ xử lý
                            </label>
                            <br />
                            @Html.ValidationMessageFor(m => m.Delivered, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" id="btnsave" class="btn btn-dark mt-3 mr-5">Cập nhật</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
