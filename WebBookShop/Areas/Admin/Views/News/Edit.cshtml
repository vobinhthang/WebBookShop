
@{
    ViewBag.Title = "Cập nhật tin tức";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@model WebBookShop.Models.NewsModel

<div class="container-fluid">
    <div>
        <p>
            <a href="/admin/news" class="text-info">Quay lại </a>
            <span class="active">/ Cập nhật tin tức</span>
        </p>
    </div>

    @if (TempData["CREATE"] != null)
    {
        <div class="alert alert-@TempData["ALEART"] alert-dismissible fade show" id="alo123">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <strong>Thông báo!</strong> <br />
            <span>@TempData["CREATE"].</span>
        </div>
    }
    <div class="card">
        <div class="card-body">
            <div class="card-title mb-4">
                <h4>Cập nhật tin tức</h4>
            </div>
            <div class="basic-form">
                @using (Html.BeginForm("Edit", "News", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.ValidationSummary(true, "")
                    <div class="form-group row">
                        <img src="@Url.Content(Convert.ToString(TempData["IMAGE"]))" style="width:250px;margin-left:200px" />
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Ảnh</label>
                        <div class="col-sm-10">
                            <input type="file" class="form-control-file" name="fileImage">
                          
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Tiêu đề</label>
                        <div class="col-sm-10">

                            @Html.TextAreaFor(m => m.NewsName, new { @class = "form-control reloadtext", @placeholder = "Nhập tiêu đề" })
                            @Html.ValidationMessageFor(m => m.NewsName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Mô tả</label>
                        <div class="col-sm-10">
                            @Html.TextAreaFor(m => m.Descripton, new { @class = "form-control reloadtext", @placeholder = "Nhập mô tả" })
                            @Html.ValidationMessageFor(m => m.Descripton, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Nội dung</label>
                        <div class="col-sm-10">
                            <textarea class="form-control" name="Detail" id="inputDetail">@ViewBag.Detail</textarea>
                            @Html.ValidationMessageFor(m => m.Detail, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Trạng thái</label>
                        <div class="col-sm-10">
                            <label class="radio-inline mr-3" style="margin-top:10px">
                                @Html.RadioButtonFor(m => m.Status, "True") Kích hoạt
                            </label>
                            <label class="radio-inline mr-3">
                                @Html.RadioButtonFor(m => m.Status, "False") Ẩn
                            </label>
                            <br />
                            @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" id="btnsave" class="btn btn-dark mt-3 mr-5">Cập nhật</button>

                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section ADMINSCRIPT{
    <script>
        CKEDITOR.replace('inputDetail')
    </script>
}
