
@{
    ViewBag.Title = "Cập nhật quyền người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model WebBookShop.Models.RoleModel

<div class="container-fluid">
    <div>
        <p>
            <a href="/admin/role" class="text-info">Quay lại </a>
            <span class="active">/ Cập nhật quyền người dùng</span>
        </p>
    </div>

    @if (TempData["UPDATEROLE"] != null)
    {
        <div class="alert alert-@TempData["ALEART"] alert-dismissible fade show" id="alo123">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <strong>Thông báo!</strong> <br />
            <span>@TempData["UPDATEROLE"].</span>
        </div>
    }

    <div class="card">
        <div class="card-body">
            <div class="card-title mb-4">
                <h4>Cập nhật quyền người dùng</h4>
            </div>
            <div class="basic-form">
                @using (Html.BeginForm("Edit", "Role", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "")
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Tên quyền người dùng</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control", @placeholder = "Nhập tên", @id = "reloadtext" })
                            @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" id="btnsave" class="btn btn-dark mt-3 ">Cập nhật</button>
                           
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>