
@{
    ViewBag.Title = "Thêm quyền người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";


}

@model WebBookShop.Models.RoleModel

<div class="container-fluid">
    <div>
        <p>
            <a href="/admin/role" class="text-info">Quay lại </a>
            <span class="active">/ Thêm mới quyền người dùng</span>
        </p>
    </div>

    @if (TempData["CREATEROLE"] != null)
    {  
        <div class="alert alert-@TempData["ALEART"] alert-dismissible fade show " id="alo123">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <strong>Thông báo!</strong> <br />
            <span>@TempData["CREATEROLE"].</span>
        </div>
    }
    
    <div class="card">
        <div class="card-body">
            <div class="card-title mb-4">
                <h4>Thêm mới quyền người dùng</h4>
            </div>
            <div class="basic-form">
                @using (Html.BeginForm("Create","Role",FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "")
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Tên quyền người dùng</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.RoleName, new { @class = "form-control reloadtext", @placeholder = "Nhập tên"})
                            @Html.ValidationMessageFor(m => m.RoleName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" id="btnsave" class="btn btn-dark mt-3 mr-5">Thêm mới</button>
                            <button type="button" id="btnreload" class="btn btn-light mt-3 ml-5">Nhập lại</button>
                        </div>
                           
                    </div>
               
                }
            </div>
        </div>
    </div>
</div>
