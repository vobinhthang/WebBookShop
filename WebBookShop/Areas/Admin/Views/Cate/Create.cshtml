
@{
    ViewBag.Title = "Thêm mới thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


@model WebBookShop.Models.CateModel

<div class="container-fluid">
    <div>
        <p>
            <a href="/admin/cate" class="text-info">Quay lại </a>
            <span class="active">/ Thêm mới thể loại</span>
        </p>
    </div>

    @if (TempData["CREATE_CATE"] != null)
    {
        <div class="alert alert-@TempData["ALEART"] alert-dismissible fade show" id="alo123">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <strong>Thông báo!</strong> <br />
            <span>@TempData["CREATE_CATE"].</span>
        </div>
    }
    <div class="card">
        <div class="card-body">
            <div class="card-title mb-4">
                <h4>Thêm mới thể loại</h4>
            </div>
            <div class="basic-form">
                @using (Html.BeginForm("Create", "Cate", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "")
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Tên thể loại <span class="text-danger">*</span> </label>
                        <div class="col-sm-10">

                            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control reloadtext", @placeholder = "Nhập tên thể loại", required = "required" })
                            @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Thể loại cha</label>
                        <div class="col-sm-10">
                            @Html.DropDownListFor(m => m.ParentID, (SelectList)ViewBag.CateList, new { @class = "form-control" })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Thứ tự sắp xếp <span class="text-danger">*</span> </label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Sort, new { @type = "number", min = "0", @class = "form-control reloadtext", @placeholder = "Nhập thứ tự sắp xếp", required = "required" })
                            @Html.ValidationMessageFor(m => m.Sort, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Trạng thái <span class="text-danger">*</span> </label>
                        <div class="col-sm-10">
                            <label class="radio-inline mr-3" style="margin-top:10px">
                                @Html.RadioButtonFor(m => m.Status, "True") Kích hoạt
                            </label>
                            <label class="radio-inline mr-3">
                                @Html.RadioButtonFor(m => m.Status, "False") Ẩn
                            </label>
                            <br />
                            @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" id="btnsave" class="btn btn-dark mt-3 mr-5">Thêm mới</button>
                            <button type="button" id="btnreload" class="btn btn-light mt-3 ml-5">Nhập lại</button>
                        </div>

                    </div>
                }
            </div>
        </div>
    </div>
</div>

