
@{
    ViewBag.Title = "Cập nhật thể loại";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model WebBookShop.Models.CateModel

<div class="container-fluid">

    <div>
        <p>
            <a href="/admin/cate" class="text-info">Quay lại </a>
            <span class="active">/ Cập nhập thông tin thể loại</span>
        </p>
    </div>


    @if (TempData["UPDATE_CATE"] != null)
    {
        <div class="alert alert-@TempData["ALEART"] alert-dismissible fade show" id="alo123">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            <strong>Thông báo!</strong> <br />
            <span>@TempData["UPDATE_CATE"]</span>
        </div>
    }


    <div class="card">
        <div class="card-body">
            <div class="card-title mb-4">
                <h4>Cập nhập thông tin thể loại</h4>
            </div>
            <div class="basic-form">
                @using (Html.BeginForm("Edit", "Cate", FormMethod.Post))
                {
                    @Html.ValidationSummary(true, "")
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Tên thể loại</label>
                        <div class="col-sm-10">

                            @Html.TextBoxFor(m => m.CategoryName, new { @class = "form-control reloadtext", @placeholder = "Nhập tên thể loại" })
                            @Html.ValidationMessageFor(m => m.CategoryName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Thể loại cha</label>
                        <div class="col-sm-10">

                            @Html.TextBoxFor(m => m.ParentID, new { @type = "number", @class = "form-control reloadtext", @placeholder = "Nhập Id thể loại cha" })

                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Thứ tự sắp xếp</label>
                        <div class="col-sm-10">
                            @Html.TextBoxFor(m => m.Sort, new { @type = "number", @class = "form-control reloadtext", @placeholder = "Nhập thứ tự sắp xếp" })
                            @Html.ValidationMessageFor(m => m.Sort, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-2 col-form-label">Trạng thái</label>
                        <div class="col-sm-10">
                            <label class="radio-inline mr-3" style="margin-top:10px">
                                @Html.RadioButtonFor(m => m.Status, "True") Kích hoạt
                            </label>
                            <label class="radio-inline mr-3">
                                @Html.RadioButtonFor(m => m.Status, "False") Ẩn
                            </label>
                            <br />
                            @Html.ValidationMessageFor(m => m.Status, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group row">
                        <div class="col-sm-10">
                            <button type="submit" id="btnsave" class="btn btn-dark mt-3 mr-5">Cập nhập</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
