@using WebBookShop.Models

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/Assets/client/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.green.min.css" integrity="sha512-C8Movfk6DU/H5PzarG0+Dv9MA9IZzvmQpO/3cIlGIflmtY3vIud07myMu4M/NTPJl8jmZtt/4mC9bAioMZBBdA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css" integrity="sha512-sMXtMNL1zRzolHYKEujM2AqCLUR9F2C4/05cdbxjjLSRvMQIciEPCQZo++nk7go3BtSuK9kfa/s+a4f4i5pLkw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" integrity="sha512-tS3S5qG0BlhnQROyJXvNjeEM4UpMXHrQfTGmbQ1gKmelCxlSEBUaxhRBj/EFTzpbP4RVSrpEikbmdJobCvhE3g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" integrity="sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>@ViewBag.Title</title>

</head>
<body>
    <div class="app">
        <div class="header">
            <div class="header__navbar">
                <div class="navbar__left">
                    <ul class="contact-info">
                        <li class="contact__info-item">
                            <i class="fa-solid fa-shield"></i>
                            100% sản phẩm có bản quyển
                        </li>
                        <li class="contact__info-item">
                            <i class="fa-sharp fa-solid fa-truck-fast"></i>
                            Giao hàng toàn quốc
                        </li>
                        <li class="contact__info-item">
                            <i class="fa-solid fa-arrows-rotate"></i>
                            30 ngày miễn phí đổi trả
                        </li>
                    </ul>
                </div>

                <div class="navbar__right">
                    <a href="/news" class="news">
                        <p>Tin tức & Sự kiện</p>
                    </a>
                </div>
            </div>

            <div class="header__middle">
                <div class="header__logo">
                    <a href="/home"><img style="width:85%" src="/Assets/client/img/logo BookHive.png" alt="logoWebsite"></a>
                </div>
                @{Html.RenderAction("HeaderSearch", "Home");
                }

                <div class="header__cart">
                    <div class="header__order">
                        <div>
                            <i class="fa-solid fa-box box__icon"></i>
                        </div>
                        <a href="./orderTracking.html" class="order_link">Theo dõi<br>đơn hàng</a>
                    </div>
                    <div class="header__login">
                        <div>
                            <i class="fa-regular fa-user box__icon"></i>
                        </div>
                        <a href="./login.html" class="order_link">Đăng nhập<br>Đăng ký</a>
                    </div>
                    <a href="/cart" class="header__minicart">
                        <div>
                            <i style="color:black" class="fa-solid fa-cart-shopping box__icon"></i>
                        </div>
                        <span class="order_link">Giỏ hàng</span>
                        <span class="cart__quantity">
                            @{
                                if (Session["CartSession"] != null)
                                {

                                    var list = (List<CartItem>)Session["CartSession"];
                                    var count = list.Sum(x => x.Quantity);
                                    <spam class="bg-danger px-3 py-2" style="border-radius:10px">@count</spam>
                                }
                                else
                                {
                                    <span class="px-3 py-2" style="border-radius:10px;background-color:#c8c8c8">0</span>
                                }
                            }

                        </span>
                    </a>
                </div>
            </div>
        </div>

        @RenderBody()

        <div class="footer">
            <div class="footer__item">
                <h2 class="footer__title">BookHive</h2>
                <ul class="footer__item--link">
                    <li class="ft--link">
                        <a href="">Giới thiệu về BookHive</a>
                    </li>
                    <li class="ft--link">
                        <a href="">Quy định sử dụng</a>
                    </li>
                    <li class="ft--link">
                        <a href="">Điều khoản - Điều kiện giao dịch</a>
                    </li>
                    <li class="ft--link">
                        <a href=""> Thông báo từ BookHive</a>
                    </li>
                    <li class="ft--link">
                        <a href=""> Bảo mật</a>
                    </li>
                </ul>
            </div>

            <div class="footer__item">
                <h2 class="footer__title">TRỢ GIÚP</h2>
                <ul class="footer__item--link">
                    <li class="ft--link">
                        <a href="">Hướng dẫn đặt hàng</a>
                    </li>
                    <li class="ft--link">
                        <a href="">Phương thức thanh toán</a>
                    </li>
                    <li class="ft--link">
                        <a href="">Phương thức vận chuyển</a>
                    </li>
                    <li class="ft--link">
                        <a href="">Chính sách đổi trả</a>
                    </li>
                    <li class="ft--link">
                        <a href="">Các câu hỏi thường gặp</a>
                    </li>
                </ul>
            </div>

            <div class="footer__item">
                <h2 class="footer__title">LIÊN HỆ VỚI CHÚNG TÔI</h2>
                <ul class="footer__item--link">
                    <li class="ft--link">
                        <a href=""> Địa chỉ: Gốc Mít</a>
                    </li>
                    <li class="ft--link">
                        <a href="">Hotline: 03621316975</a>
                    </li>
                    <li class="ft--link">
                        <a href="">Email: quangdt432002@gmail.com</a>
                    </li>
                    <li class="ft--link">
                        <a href=""> Website: bookhive.com</a>
                    </li>
                </ul>
            </div>

            <div class="footer__item">
                <h2 class="footer__title">LIKE ĐỂ NHẬN ƯU ĐÃI LỚN NHẤT</h2>
            </div>
        </div>
        <div class="copyright">
            <p class="copyright__text">Copyright © 2023 BookHive All rights reserved.</p>
        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.3/jquery.min.js" integrity="sha512-STof4xm1wgkfm7heWqFJVn58Hm3EtS31XFaagaa8VMReCXAkQnJZ+jEy8PCC/iT18dFy95WcExNHFTqLyp72eQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js" integrity="sha512-bPs7Ae6pVvhOSiIcyUClR7/q2OAsRiovw4vAkX+zJbw3ShAeeqezq50RIIcIURq7Oa20rW2n2q+fyXBNcU9lrw==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="/Assets/client/js/app.js"></script>
    <script src="~/Assets/admin/myscript.js"></script>
    @RenderSection("CLIENTSCRIPT", false)
</body>
</html>
