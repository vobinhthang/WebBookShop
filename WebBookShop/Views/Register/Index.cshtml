
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/Assets/client/css/login.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;800&display=swap">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>Register</title>

</head>
<body>
    <form action="" method="" class="formRegister box">
        <div class="containers">

            <div class="top">
                <!-- <span><a href="" class="register__link"></a></span> -->
                <header>ĐĂNG KÝ</header>
            </div>

            <div class="input-field">
                <input id="username" type="email" class="inputLogin" placeholder="Email" required>
                <i class='bx bx-user'></i>
            </div>

            <div class="input-field">
                <input id="password" type="Password" class="inputLogin" placeholder="Mật Khẩu"  required>
                <i class='bx bx-lock-alt'></i>
            </div>

            <div class="input-field">
                <input id="passwordConfirm" type="Password" class="inputLogin" placeholder="Nhập Lại mật khẩu" required>
                <i class='bx bx-lock-alt'></i>
            </div>

            <div class="input-field">
                <button class="submit" type="submit">Đăng Ký</button>
            </div>

            <div class="two-col">
                <div class="one">
                    <!-- <input type="checkbox" name="" id="check">
                    <label for="check">Nhớ mật khẩu</label> -->
                </div>
                <div class="two">
                    <label><a href="#">Quên mật khẩu?</a></label>
                </div>
            </div>
        </div>
    </form>

    <script src="/Assets/client/js/validate.js"></script>
</body>
</html>
