
@{
    Layout = null;
}
@model WebBookShop.Models.UserModel
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/Assets/client/css/login.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Nunito:wght@400;600;800&display=swap">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <title>Đăng ký</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body>
    @if (TempData["MESSAGE"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show mb-0 text-center" id="alo123">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            </button>
            <strong>Thông báo!</strong> @TempData["MESSAGE"]
        </div>
    }
    @using (Html.BeginForm("Index", "Register", FormMethod.Post, new { @class = "formRegister box" }))
    {

        <div class="containers">

            <div class="top">
                <span>Bạn đã có tài khoản? <a href="/login" class="register__link ml-1 text-warning"> Đăng nhập</a></span>
                <header class="text-center">ĐĂNG KÝ</header>
            </div>

            <div class="input-field">
                @Html.TextBoxFor(m => m.Email, new { type = "email", @class = "inputLogin", @placeholder = "Email", required = "required" })
                <i class='bx bx-user'></i>
            </div>

            <div class="input-field">
                @Html.TextBoxFor(m => m.Password, new { type = "password", @id = "password", @class = "inputLogin", @placeholder = "Mật Khẩu", required = "required" })

                <i class='bx bx-lock-alt'></i>

            </div>
            <div class="input-field">
                <input id="passwordConfirm" type="password" class="inputLogin " placeholder="Nhập lại mật khẩu" required>
                <i class='bx bx-lock-alt'></i>
            </div>

            <div class="input-field">
                <button class="submit" type="submit">ĐĂNG KÝ</button>
            </div>
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger font-weight-bold" })
            <div class="two-col">
                <div class="one">
                    <!-- <input type="checkbox" name="" id="check">
                    <label for="check">Nhớ mật khẩu</label> -->
                </div>
            </div>
        </div>

    }
    <script src="~/Assets/admin/plugins/common/common.min.js"></script>
    <script src="~/Assets/admin/js/custom.min.js"></script>
    <script src="/Assets/admin/myscript.js"></script>
    <script src="/Assets/client/js/validate.js"></script>

</body>
</html>
